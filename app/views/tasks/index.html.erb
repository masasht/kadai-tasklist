<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <% user = task.user %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td class="text-muted"><%= link_to task.status, task %></td>
          <td class="text-muted"><%= link_to task.content, task %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>
<%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>
  
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'User Login!', login_path, class: 'btn btn-lg btn-info' %>
    </div>
  </div>
<% end %>



