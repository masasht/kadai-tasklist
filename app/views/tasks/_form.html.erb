<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :status, 'スタータス' %>
  <%= f.select :status, [["実行まえ", "実行まえ"], ["実行中", "実行中"], ["停止中", "停止中"], ["キャンセル", "キャンセル"]] %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>