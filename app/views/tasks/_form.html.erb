<div class="row">
  <div class="col-xs-12 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :status, 'スタータス' %>
        <%= f.select :status, [["実行まえ", "実行まえ"], ["実行中", "実行中"], ["停止中", "停止中"], ["キャンセル", "キャンセル"]], class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content , class: 'form-control' %>
      </div>
      <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>